@using TeCAS.Dtos
@model TeCAS.Dtos.CuentaDeAhorroDetalleDto

@{
    ViewData["Title"] = "Depositar";
}

<h1>Depositar</h1>

<h4>CuentaDeAhorroDetalleDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Depositar">
            <input type="hidden" asp-for="TransaccionId" value="@TransaccionDto.Deposito" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CuentaDeAhorroId" class="form-control" />

            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" type="number" min="1" max="100000" step="0.01" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Depositar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="~/CuentasDeAhorros/Index?clienteId=@ViewBag.ClienteId">Regresar</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}