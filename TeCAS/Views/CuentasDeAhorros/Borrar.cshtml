@model TeCAS.Dtos.CuentaDeAhorroDto

@{
    ViewData["Title"] = "Borrar";
}

<h1>Borrar</h1>

<h3 class="text-danger">¿Desea borrar la cuenta?</h3>
<div>
    <h4>Cuenta de Ahorro</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumeroDeCuenta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumeroDeCuenta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SaldoActual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SaldoActual)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaDeRegistro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaDeRegistro)
        </dd>

    </dl>

    <form asp-action="Borrar">
        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="ClienteId"/>
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a href="~/CuentasDeAhorros/Index?clienteId=@Model.ClienteId">Regresar a la lista</a>
    </form>
</div>
